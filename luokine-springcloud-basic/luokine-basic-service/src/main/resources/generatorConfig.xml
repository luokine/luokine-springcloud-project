<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--suppress MybatisGenerateCustomPluginInspection -->
<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <!-- mapper 路径 -->
        <property name="userMapperTargetPackage" value="com.luokine.basic.core.dao"/>
        <!-- service 路径 -->
        <property name="userServiceTargetPackage" value="com.luokine.basic.core.service"/>
        <!-- serviceImpl 路径 -->
        <property name="userServiceImplTargetPackage" value="com.luokine.basic.core.service.impl"/>


        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="useMapperCommentGenerator" value="true"/>

        <plugin type="com.luokine.common.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="forceAnnotation" value="true"/>
            <property name="generateColumnConsts" value="true"/>
            <property name="generateDefaultInstanceMethod" value="true"/>
            <property name="beginningDelimiter" value=""/>
            <property name="endingDelimiter" value=""/>
            <!--使用Data注解时，Getter,Setter,ToString,EqualsAndHashCode注解无效-->
            <!--<property name="lombok" value="Data,Accessors"/>-->
            <property name="lombok" value="Getter,Setter,ToString,Accessors,EqualsAndHashCode"/>
            <property name="lombokEqualsAndHashCodeCallSuper" value="false"/>
            <property name="swagger" value="false"/>
        </plugin>

        <!--通用代码生成器插件-->
        <!--mapper接口-->
        <plugin type="com.luokine.common.generator.TemplateFilePlugin">
            <property name="targetProject" value="luokine-basic-core/src/main/java"/>
            <property name="targetPackage" value="${userMapperTargetPackage}"/>
            <property name="templatePath" value="genFtl/mapper.ftl"/>
            <property name="mapperSuffix" value="Mapper"/>
            <property name="fileName" value="${tableClass.shortClassName}${mapperSuffix}.java"/>
            <property name="baseMapper" value="BaseMapper"/>
        </plugin>
        <!--通用代码生成器插件-->
        <!--service 接口-->
        <plugin type="com.luokine.common.generator.TemplateFilePlugin">
            <property name="targetProject" value="luokine-basic-core/src/main/java"/>
            <property name="targetPackage" value="${userServiceTargetPackage}"/>
            <property name="templatePath" value="genFtl/service.ftl"/>
            <property name="serviceSuffix" value="Service"/>
            <property name="fileName" value="${tableClass.shortClassName}${serviceSuffix}.java"/>
            <property name="commonService" value="CommonService"/>
        </plugin>
        <!--通用代码生成器插件-->
        <!--serviceImpl 实现-->
        <plugin type="com.luokine.common.generator.TemplateFilePlugin">
            <property name="targetProject" value="luokine-basic-core/src/main/java"/>
            <property name="targetPackage" value="${userServiceImplTargetPackage}"/>
            <property name="templatePath" value="genFtl/serviceImpl.ftl"/>
            <property name="serviceImplSuffix" value="ServiceImpl"/>
            <property name="fileName" value="${tableClass.shortClassName}${serviceImplSuffix}.java"/>
            <property name="CommonServiceImpl" value="CommonServiceImpl"/>
            <property name="mapperSuffix" value="Mapper"/>
            <property name="userMapperTargetPackage" value="${userMapperTargetPackage}"/>
            <property name="serviceSuffix" value="Service"/>
        </plugin>
