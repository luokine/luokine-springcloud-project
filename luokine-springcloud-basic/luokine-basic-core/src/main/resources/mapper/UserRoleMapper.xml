<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luokine.basic.core.dao.UserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.luokine.basic.entity.bean.UserRole">
        <id column="role_id" property="roleId" />
        <result column="role_name" property="roleName" />
        <result column="user_id" property="userId" />
        <result column="user_name" property="userName" />

    </resultMap>

    <select id="getUserRolePage" resultType="com.luokine.basic.entity.bean.UserRole">
        SELECT
            ur.role_id,
            ur.role_name,
            ur.user_id,
            ur.user_name
        FROM
            user_role ur
        WHERE
            1 = 1
        AND del_flag = 0
    </select>
    <select id="getUserRoleById" resultType="com.luokine.basic.entity.bean.UserRole">
        SELECT
            ur.role_id,
            ur.role_name,
            ur.user_id,
            ur.user_name
        FROM
            user_role ur
        WHERE
            1 = 1
        AND del_flag = 0
        AND ur.role_id =#{id}
    </select>


</mapper>