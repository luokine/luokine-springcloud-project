<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luokine.user.dao.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.luokine.user.bean.UserInfo">
        <id column="user_id" property="userId"  />
        <result column="user_name" property="userName" />
        <result column="password" property="password" />
        <result column="del_flag" property="delFlag" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

        <select id="getUserList" parameterType="com.luokine.user.bean.UserInfo" resultMap="BaseResultMap" >
        SELECT
            ui.user_id,
            ui.user_name,
            ui.create_time
        FROM
            user_info ui
        WHERE
            1 = 1
        AND del_flag = 0
    </select>


</mapper>